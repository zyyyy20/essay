<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.ArticleTagMapper">
    
    <resultMap id="TagResultMap" type="com.blog.entity.Tag">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <insert id="insert">
        INSERT INTO article_tags (article_id, tag_id)
        VALUES (#{articleId}, #{tagId})
    </insert>
    
    <delete id="deleteByArticleId">
        DELETE FROM article_tags WHERE article_id = #{articleId}
    </delete>
    
    <delete id="deleteByTagId">
        DELETE FROM article_tags WHERE tag_id = #{tagId}
    </delete>
    
    <select id="findTagsByArticleId" resultMap="TagResultMap">
        SELECT t.id, t.name, t.created_at
        FROM tags t
        INNER JOIN article_tags at ON t.id = at.tag_id
        WHERE at.article_id = #{articleId}
        ORDER BY t.name
    </select>
    
    <select id="findArticleIdsByTagId" resultType="java.lang.Integer">
        SELECT article_id
        FROM article_tags
        WHERE tag_id = #{tagId}
    </select>
</mapper>